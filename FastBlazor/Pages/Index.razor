@page "/"
@using FastBlazor.Enums 

<FastGrid Data=@(Books) SortType="SortType.Multiple" Title="Meus Livros">
    <Columns>
        <FastGridColumn Property=@(nameof(Book.Name)) Sortable="true" Title="Nome" />
        <FastGridColumn Property=@(nameof(Book.PageCount)) Sortable="true" Title="Número de Páginas" />
        <FastGridColumn Property=@(nameof(Book.WasRead)) Sortable="true" Title="Lido"/>
    </Columns>
</FastGrid>

<button class="btn btn-primary" @onclick=@(Update)>Update</button>

@code
{
    private void Update()
    {
        Numbers[0]++;
    }

    protected override void OnInitialized()
    {
        Numbers = (int[])Array.CreateInstance(typeof(int), 10);

        for (int i = 0; i < Numbers.Length; i++)
        {
            Numbers[i] = i + 1;
        }
    }

    public int[] Numbers;

    public List<Book> Books = new List<Book>()
    {
        new Book("A", 100, false),
        new Book("B", 80,  true ),
        new Book("C", 90,  false),
        new Book("D", 70,  true ),
        new Book("E", 50,  false),
        new Book("F", 60,  true ),
        new Book("G", 40,  false),
        new Book("H", 30,  true ),
        new Book("I", 10,  false),
        new Book("J", 20,  true )
    };

    public class Book
    {
        public Book(string name, int pageCount, bool wasRead)
        {
            Id = Guid.NewGuid();
            Name = name;
            PageCount = pageCount;
            WasRead = wasRead;
        }
        public Guid Id { get; set; }
        public string Name { get; set; }
        public int PageCount { get; set; }
        public bool WasRead { get; set; }
    }
}